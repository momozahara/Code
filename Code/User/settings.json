{
  "window.restoreWindows": "none",

  "workbench.iconTheme": "material-icon-theme", // material-icon-theme extension
  "workbench.editor.enablePreview": true,
  "workbench.startupEditor": "none",

  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorBlinking": "smooth",
  "editor.lightbulb.enabled": false,
  "editor.cursorStyle": "block",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "jinxdash.prettier-rust", // Prettier - Code formatter (Rust)
  },
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    },
    "editor.quickSuggestions": {
      "strings": true
    },
  },

  "typescript.updateImportsOnFileMove.enabled": "never",
  "javascript.updateImportsOnFileMove.enabled": "never",

  "terminal.integrated.fontFamily": "CaskaydiaCove NF", // oh-my-posh fonts

  "security.workspace.trust.untrustedFiles": "open",

  "trailing-spaces.trimOnSave": true,

  "files.associations": {
    "*.css": "tailwindcss" // tailwindcss extension
  },

  "vscode_custom_css.imports": [
    "file:///C:/Users/username/code.css"
  ],
  "explorer.confirmDragAndDrop": false,
  
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.renderColons": false,
  
  "editor.accessibilitySupport": "off",
}
